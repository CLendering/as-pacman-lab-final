    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pacman Contest with Particle Filter Team",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pacman-contest/src/contest/capture.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/pacman-contest/src/contest",
            "justMyCode": true,
            "args": [
                "-r",
                "agents/team_with_filter/particleFilterTeam",
            ]
        },
        {
            "name": "[quiet] Pacman Contest with Particle Filter Team",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pacman-contest/src/contest/capture.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/pacman-contest/src/contest",
            "justMyCode": true,
            "args": [
                "-r",
                "agents/team_with_filter/particleFilterTeam",
                "-q"
            ]
        },
        {
            "name": "Keyboard Agent",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pacman-contest/src/contest/capture.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/pacman-contest/src/contest",
            "justMyCode": true,
            "args": [
                "--keys0",
            ]
        },
    ]
}